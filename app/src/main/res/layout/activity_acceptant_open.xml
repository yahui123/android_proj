<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    tools:context="com.tang.trade.tang.ui.AcceptantOpenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bds_open_acceptant"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/d12"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_revalued_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/bds_select_currency"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/text_black_textsize13"
            />
        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s12"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/mine_text_gray"
            android:visibility="gone"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_currency_select"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/bg_line_shape_radiues"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_currency_select"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingTop="@dimen/d8"
            android:singleLine="true"
            android:textColor="@color/mine_text_gray"
            android:textSize="@dimen/s16" />
        <ImageView
            android:id="@+id/iv_currency_select"
            android:padding="@dimen/d8"
            android:layout_gravity="center"
            android:src="@mipmap/drop_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/d12"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/bds_diya_amount"
            android:textSize="@dimen/s14"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/common_text_blank"
            />
        <TextView
            android:id="@+id/tv_mindiya_quate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s12"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/mine_text_gray"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/bg_line_shape_radiues"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <EditText
            android:gravity="right"
            android:id="@+id/et_revalued_currency"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/mine_text_gray"
            android:textSize="@dimen/s16"
            android:maxLines="1"
            android:background="@null"
            android:singleLine="true"
            android:inputType="number"
            android:paddingLeft="@dimen/d10"
            android:paddingTop="@dimen/d8"
            android:paddingBottom="@dimen/d10"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cecurry"
            android:text="@string/BDS"
            android:padding="@dimen/d10"
            android:maxLines="1"
            style="@style/text_black_textsize13"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/d8"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bds_fee"
            android:textSize="@dimen/s12"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="@color/mine_text_gray"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:textSize="@dimen/s14"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textAllCaps="false"
        android:text="@string/bds_submit"
        android:background="@drawable/bg_button_shape_radiues"/>



</LinearLayout>
