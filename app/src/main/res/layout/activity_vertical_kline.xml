<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_separator_v2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/line_title"
        style="@style/my_actionbar_styles"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/market_global_lower">

        <ImageView
            android:id="@+id/tv_kline_back"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/iv_write_back" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_title_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/d20"
            android:text="——"
            android:textColor="@color/common_white" />
    </RelativeLayout>

    <View
        android:id="@+id/viewLime"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#1AE18D" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line_hoder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/market_global_lower"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/d7"
                        android:paddingRight="@dimen/d10">

                        <TextView
                            android:id="@+id/tv_new_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00000"
                            android:textColor="@color/common_white"
                            android:textSize="@dimen/s20" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d09"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_growth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/common_white"
                                android:textSize="@dimen/s16" />

                            <TextView
                                android:id="@+id/tv_growth_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d10"
                                android:text="0.00%"
                                android:textColor="@color/common_white"
                                android:textSize="@dimen/s16" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d06"
                            android:text="2018/03/20"
                            android:textColor="@color/common_white"
                            android:textSize="@dimen/s12"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/d5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_high"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kline_high"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                                <TextView
                                    android:id="@+id/tv_price_high"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d3"
                                    android:text="——"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d3"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_low"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kline_low"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                                <TextView
                                    android:id="@+id/tv_price_low"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d3"
                                    android:text="——"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                            </LinearLayout>
                        </LinearLayout>

                        <!---->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d8"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/d5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kline_start"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                                <TextView
                                    android:id="@+id/tv_price_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d3"
                                    android:text="——"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d3"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_volume"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kline_volume"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                                <TextView
                                    android:id="@+id/tv_price_volume"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d3"
                                    android:text="——"
                                    android:textColor="@color/common_white"
                                    android:textSize="@dimen/s12" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_k"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d30"
                android:background="#34EEA0"
                android:gravity="center"
                android:text="K线图"
                android:textColor="@color/common_white"
                android:textSize="@dimen/s13"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/market_kline_sp_ll_bg"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:showIn="@layout/activity_kline">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="分时"
                            android:textColor="@color/common_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="日线"
                            android:textColor="@color/common_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="周线"
                            android:textColor="@color/common_white" />

                        <Spinner
                            android:id="@+id/sp_kline_period_switch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/market_kline_sp_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/common_separator_v2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/rbList"
                                style="@style/text_black_textsize13"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/common_separator_v2"
                                android:drawableRight="@mipmap/iv_bottom_icon"
                                android:gravity="center"
                                android:paddingLeft="@dimen/d15"
                                android:paddingRight="@dimen/d15"
                                android:tag="min1"
                                android:text="@string/bds_select_min"
                                android:textColor="@drawable/btn_line_color_blue_black" />
                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/radioTime"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbDay1"
                                style="@style/KLineVRadioButton_style"
                                android:checked="true"
                                android:tag="min1"
                                android:text="@string/bds_DayLine" />

                            <RadioButton
                                android:id="@+id/rbweek"
                                style="@style/KLineVRadioButton_style"
                                android:tag="min1"
                                android:text="@string/bds_weekLine" />

                            <RadioButton
                                android:id="@+id/rbMin1"
                                style="@style/KLineVRadioButton_style"
                                android:tag="min1"
                                android:text="@string/bds_mins" />
                        </RadioGroup>

                        <ImageView
                            android:id="@+id/iv_quanping"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="@dimen/d10"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/marker_horizontal_screen" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_kline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/common_white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/d3">

                            <TextView
                                android:id="@+id/tv_kline_volume_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/common_color_blank"
                                android:textSize="10sp"
                                tools:text="成交量(7,30)：0.00" />

                            <TextView
                                android:id="@+id/tv_kline_volume_ma7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/market_kline_text_orange"
                                android:textSize="10sp"
                                tools:text="MA7：12532.1236" />

                            <TextView
                                android:id="@+id/tv_kline_volume_ma30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/market_kline_text_blue"
                                android:textSize="10sp"
                                tools:text="MA30：0.00" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                            <com.tang.trade.kchar.widget.MyCombinedChart
                                android:id="@+id/chart_kline"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.tang.trade.tang.widget.LoadingView
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_white"
                android:orientation="vertical"
                android:scrollbars="none">

                <TextView
                    style="@style/text_black_textsize13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d9"
                    android:paddingLeft="@dimen/d11"
                    android:paddingTop="@dimen/d13"
                    android:text="最新成交" />

                <View
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1AE18D" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/d18"
                    android:paddingRight="@dimen/d18"
                    android:paddingTop="@dimen/d15">

                    <TextView
                        style="@style/text_black_textsize12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bds_Time" />

                    <TextView
                        style="@style/text_black_textsize12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="@string/bds_price" />

                    <TextView
                        android:id="@+id/tv_qouteSymbol"
                        style="@style/text_black_textsize12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="@string/BDS" />

                    <TextView
                        android:id="@+id/tv_basesymbol"
                        style="@style/text_black_textsize12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/CNY" />

                </LinearLayout>

                <com.tang.trade.tang.widget.MyScrollViewListView
                    android:id="@+id/kListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/common_none"
                    android:dividerHeight="@dimen/d6"
                    android:listSelector="@color/common_none"
                    android:paddingBottom="@dimen/d15"
                    android:paddingLeft="@dimen/d18"
                    android:paddingRight="@dimen/d18"
                    android:paddingTop="@dimen/d5"
                    android:scrollbars="none"
                    android:showDividers="middle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:elevation="@dimen/d1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d20"
        android:paddingTop="@dimen/d10">

        <android.support.v4.widget.Space
            android:layout_width="@dimen/d15"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="@dimen/d37"
            android:layout_marginRight="@dimen/d32"
            android:layout_weight="1"
            android:background="@drawable/btn_red"
            android:text="@string/bds_Buy"
            android:textAllCaps="false"
            android:textColor="@color/common_white"
            android:textSize="@dimen/s14" />

        <Button
            android:id="@+id/btn_sell"
            android:layout_width="0dp"
            android:layout_height="@dimen/d37"
            android:layout_weight="1"
            android:background="@drawable/btn_green"
            android:text="@string/bds_Sell"
            android:textAllCaps="false"
            android:textColor="@color/common_white"
            android:textSize="@dimen/s14" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/d15"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
