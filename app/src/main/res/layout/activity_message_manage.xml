<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/common_bg_gray_v2"
    tools:context="com.tang.trade.tang.ui.MessageManageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bds_managering"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize" />\
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_wancheng"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d40"
            android:padding="@dimen/d10"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/s14"
            android:textColor="@color/common_white"
            android:text="完成"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/bg_line_shape_radiue_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/d10"
                >
                <EditText
                    android:id="@+id/et_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/d10"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="top"
                    android:maxLines="2"
                    android:maxLength="20"
                    android:textColor="@color/mine_text_gray"
                    android:hint="请输入文字..."
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/advice_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="0/20"
                    android:textColor="@color/mine_text_gray"
                    android:textSize="@dimen/s13"
                    android:layout_margin="3dp"

                    />
            </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="@dimen/d50"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:textSize="@dimen/s14"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:text="@string/bds_submit"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_shape_radiues"/>



</LinearLayout>
