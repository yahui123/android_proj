<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/common_white"
    tools:context="com.tang.trade.tang.ui.loginactivity.ChangePasswordActivity">
    <RelativeLayout
    android:layout_width="match_parent"
    style="@style/my_actionbar_styles"
    >

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/d40"
        android:layout_height="@dimen/d40"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@mipmap/common_back" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/bds_pwd_change"
        android:paddingTop="@dimen/d20"
        style="@style/text_title_textsize" />
    <ImageView
        android:id="@+id/iv_time_select"
        android:layout_width="@dimen/d40"
        android:layout_height="@dimen/d40"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:src="@mipmap/mine_accept_time_icom" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"/>

    <LinearLayout
        android:layout_marginTop="@dimen/d12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_line_shape_radiues"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginRight="@dimen/d12"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_OldPassword"
            android:paddingLeft="@dimen/d10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/bds_input_old_pwd"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/common_text_blank"
            android:textColorHint="@color/common_edit_hint"
            android:textSize="@dimen/s13" />
        <ImageView
            android:visibility="gone"
            android:padding="@dimen/d10"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password"  />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/d12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_line_shape_radiues"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginRight="@dimen/d12"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_NewPassword"
            android:paddingLeft="@dimen/d10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/bds_input_new_pwd"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/common_text_blank"
            android:textColorHint="@color/common_edit_hint"
            android:textSize="@dimen/s13" />
        <ImageView
            android:visibility="gone"
            android:padding="@dimen/d10"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password"  />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/d12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_line_shape_radiues"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginRight="@dimen/d12"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_confirm"
            android:paddingLeft="@dimen/d10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/bds_input_comfirm_new_pwd"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/common_text_blank"
            android:textColorHint="@color/common_edit_hint"
            android:textSize="@dimen/s13" />
        <ImageView
            android:visibility="gone"
            android:padding="@dimen/d10"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password"  />
    </LinearLayout>

    <Button
        android:id="@+id/btn_summit"
        android:layout_marginTop="@dimen/d50"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:textSize="@dimen/s14"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:text="@string/bds_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_shape_radiues"/>

</LinearLayout>