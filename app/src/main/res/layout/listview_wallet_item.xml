<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/d12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="aadadasda"
            style="@style/textview_2"
            android:layout_marginLeft="@dimen/d10"
            android:id="@+id/blockid"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left" />

        <TextView
            android:layout_marginLeft="@dimen/d10"
            style="@style/textview_2"
            android:layout_gravity="center_horizontal"
            android:text="aadada11111111sda"
            android:id="@+id/generatetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_horizontal" />

        <TextView
            android:text="aadad3333333333asda"
            style="@style/textview_2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/witnesses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_marginRight="@dimen/d10"
            android:text="aadadasda"
            style="@style/textview_2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/transactions"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/d12" />
</LinearLayout>