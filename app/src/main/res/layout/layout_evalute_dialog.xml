<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:padding="@dimen/d9"
            android:src="@mipmap/common_cancel_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bds_Rate"
            style="@style/text_black_textsize13"
            android:textSize="@dimen/s14"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/common_separator_v1"
        />
    <TextView
        android:layout_marginTop="@dimen/d5"
        android:paddingTop="@dimen/d5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text_gray_13"
        android:text="@string/bds_fuwu_taidu"/>

    <RatingBar
        android:paddingTop="@dimen/d8"
        android:paddingBottom="@dimen/d8"
        android:id="@+id/myRanking1"
        style="@style/foodRatingBarBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text_gray_13"
        android:text="@string/bds_xiangying_sudu"/>

    <RatingBar
        android:paddingTop="@dimen/d8"
        android:paddingBottom="@dimen/d8"
        android:id="@+id/myRanking2"
        style="@style/foodRatingBarBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:layout_gravity="center"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text_gray_13"
        android:text="@string/bds_chengxindu"/>

    <RatingBar
        android:paddingTop="@dimen/d8"
        android:paddingBottom="@dimen/d8"
        android:id="@+id/myRanking3"
        style="@style/foodRatingBarBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d20"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:textSize="@dimen/s14"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:text="@string/bds_submit"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_shape_radiues"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d20"
        />


</LinearLayout>