<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@null"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect"
        android:orientation="vertical"
        android:padding="5dp">
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10" />
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:src="@mipmap/common_cancel_icon"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d10"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BTC"
                android:textColor="@color/common_color_blank"
                android:textSize="@dimen/s20"
                android:layout_centerInParent="true"
                android:layout_marginTop="35dp"/>
        </RelativeLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10" />
        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="@dimen/d120"
            android:layout_height="@dimen/d120"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginBottom="@dimen/s16"
            android:layout_marginRight="@dimen/d30"
            android:gravity="center"
            android:textColor="@color/common_color_blank"
            android:padding="@dimen/d8"
            android:background="@drawable/shape_rectangle_bg"
            />
        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:lineSpacingExtra="@dimen/d5"
            android:layout_marginLeft="@dimen/d60"
            android:layout_marginBottom="@dimen/s16"
            android:layout_marginRight="@dimen/d60"
            android:text="@string/bds_copy"
            android:gravity="center"
            android:padding="@dimen/d8"
            android:textColor="@color/common_white"
            android:background="@drawable/bg_button_shape_radiues" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/d10" />
    </LinearLayout>
    <View
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

</LinearLayout>