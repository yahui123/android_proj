<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d10"
        android:background="@color/common_separator_v2"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tc_acc_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:maxLines="1"
            style="@style/text_black_textsize13"
            />

        <TextView
            android:id="@+id/tc_acc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:maxLines="1"
            style="@style/text_black_textsize12"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@mipmap/common_enter_left"
            android:alpha="0.8"
            android:paddingRight="@dimen/d10"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/common_separator_v2"/>
</LinearLayout>
