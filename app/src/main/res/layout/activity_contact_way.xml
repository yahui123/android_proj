<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:layout_gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/iv_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitCenter"
            android:src="@mipmap/common_back"
            android:layout_marginTop="5dp"/>



        <TextView
            android:layout_marginLeft="@dimen/d15"
            android:layout_centerHorizontal="true"
            android:text="@string/bds_contact_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_title_textsize"
            android:paddingTop="@dimen/d10"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:text="@string/bds_name"
        android:textColor="@color/common_color_blank" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/shape_rectangle_bg"
        android:gravity="center_vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint=""
            />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:text="@string/bds_contact_way"
        android:textColor="@color/common_color_blank" />

    <LinearLayout
        android:id="@+id/ll_contact_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/shape_rectangle_bg"
        android:gravity="center_vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_contact_way"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="@dimen/d195"
        android:layout_height="@dimen/d35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d60"
        android:background="@drawable/btn_sendout"
        android:gravity="center"
        android:text="@string/bds_save"
        android:textColor="@color/common_white"

        android:textSize="@dimen/s16" />


</LinearLayout>