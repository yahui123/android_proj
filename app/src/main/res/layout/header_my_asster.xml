<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_houder"
            android:paddingLeft="@dimen/d5"
            android:paddingRight="@dimen/d5"
            android:paddingBottom="@dimen/d5"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/mine_myasset_header"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hoder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/common_white"
                android:text="@string/bds_total_assets"
                android:textSize="@dimen/s18"
                />
            <TextView
                android:id="@+id/iv_baseSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/common_white"
                android:text="（CNY）"
                android:textSize="@dimen/s18"
                />
            <TextView
                android:paddingTop="@dimen/d5"
                android:id="@+id/tvAsset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/common_white"
                android:text="0.00000"
                android:textSize="@dimen/s18"
                />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>