<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingLeft="@dimen/d5"
        android:paddingRight="@dimen/d5"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/bg_rect"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_coin"
                android:layout_width="40dp"
                android:scaleType="fitCenter"
                android:layout_height="24dp"
                android:src="@mipmap/broaderless"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BDS"
                        android:textColor="@color/common_text_blank"
                        android:textSize="@dimen/s8"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:id="@+id/tv_coinType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BDS"
                        android:textColor="@color/common_text_blank"
                        android:textSize="@dimen/s16" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_zhehe"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:text="折合："
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/mine_myasset_text_blue"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_count"
                android:textSize="@dimen/s12"
                android:paddingRight="@dimen/d10"
                style="@style/text_black_textsize13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>