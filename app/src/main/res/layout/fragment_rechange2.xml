<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    tools:context="com.tang.trade.tang.ui.fragment.ReChangeFragment2">

    <RelativeLayout
        android:background="@drawable/bg_market_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d68"
        android:paddingRight="@dimen/d4">

        <TextView
            android:id="@+id/tv_principal_subordinate_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/d10"
            android:text="@string/bds_bts_usd"
            android:textColor="@color/common_text_blank"
            android:textSize="@dimen/s16"
            android:drawableRight="@mipmap/rechange_drop_down"
            android:drawablePadding="@dimen/d5"/>

        <ImageView
            android:id="@+id/iv_kchar"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:src="@mipmap/rechange_kchar"
            android:padding="@dimen/d10"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/rechange_tab_selected"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabSelectedTextColor="@color/rechange_tab_selected" />

    <!--<com.viewpagerindicator.TabPageIndicator-->
        <!--android:id="@+id/pagerIndicator"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="@dimen/d10"-->
        <!--android:paddingBottom="@dimen/d10"-->
        <!--android:paddingLeft="@dimen/d20"-->
        <!--android:background="@color/gray_eded"-->
        <!--app:tabIndicatorColor="@color/main_ed"-->
        <!--app:tabSelectedTextColor="@color/main_ed"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_bg_gray"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_exchange"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
