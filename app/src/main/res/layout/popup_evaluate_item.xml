            android:id="@+id/menu_item2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/grey_star"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/menu_item3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/grey_star"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/menu_item4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/grey_star"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>