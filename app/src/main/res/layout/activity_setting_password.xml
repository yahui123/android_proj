<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    tools:context="com.tang.trade.tang.ui.loginactivity.SettingPasswordActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ProgressBar
            android:layout_marginTop="28dp"
            android:id="@+id/progress_bar"
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:background="#D8D8D8"
            android:max="90"
           />
        <LinearLayout
          android:layout_marginTop="@dimen/d32"
          android:layout_width="match_parent"
          android:gravity="center_vertical"
          android:layout_height="20dp">
          <View
              android:layout_width="0dp"
              android:layout_weight="1"
              android:background="@null"
              android:layout_height="0dp"/>
          <ImageView
              android:layout_marginLeft="@dimen/d10"
              android:layout_marginRight="@dimen/d10"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@mipmap/common_select_true"/>
          <View
              android:background="@drawable/bg_stoke_gray_line"
              android:layout_width="0dp"
              android:layout_weight="2"
              android:layerType="software"
              android:layout_height="wrap_content"/>
          <ImageView
              android:layout_marginLeft="@dimen/d10"
              android:layout_marginRight="@dimen/d10"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@mipmap/common_select_false"/>
          <View
              android:layout_width="0dp"
              android:background="@drawable/bg_stoke_gray_line"
              android:layout_weight="2"
              android:layerType="software"
              android:layout_height="wrap_content"/>
          <ImageView
              android:layout_marginLeft="@dimen/d10"
              android:layout_marginRight="@dimen/d10"
              android:layout_width="20dp"
              android:layout_height="20dp"

              android:src="@mipmap/common_select_false"/>
          <View
              android:layout_width="0dp"
              android:layout_weight="1"
              android:background="@null"
              android:layout_height="0dp"/>
      </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/d6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bds_create_wallet"
                android:textSize="@dimen/s12"
                android:gravity="center"
                android:textColor="@color/common_text_blue_v2" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/bds_redister_account"
                android:textSize="@dimen/s12"
                android:textColor="@color/common_edit_hint" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/bds_bds_login"
                android:textSize="@dimen/s12"
                android:gravity="center"
                android:textColor="@color/common_edit_hint" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginLeft="@dimen/d22"
        android:layout_width="wrap_content"
        android:src="@mipmap/iv_borderless_icon"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="@dimen/d30"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginRight="@dimen/d12"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_pwd_icon" />
            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/bds_input_wallet_pwd"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/common_text_blank"
                android:textColorHint="@color/common_edit_hint"
                android:textSize="@dimen/s13" />
            <ImageView
                android:id="@+id/eye_password"
                android:padding="@dimen/d10"
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"  />
        </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="22dp"
            android:background="@color/common_line_gray" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginRight="@dimen/d12"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_pwd_icon" />
            <EditText
                android:id="@+id/et_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/bds_confirm_input_wallet_pwd"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/common_text_blank"
                android:textColorHint="@color/common_edit_hint"
                android:textSize="@dimen/s13" />
            <ImageView
                android:id="@+id/eye_confirm"
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
              />
        </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="52dp"
        android:layout_marginRight="22dp"
            android:background="@color/common_line_gray" />
    
    <TextView
            android:id="@+id/tv_ok"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/btn_blue_gradient_radius"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/bds_confirm"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/common_white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_gif1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:scaleType="fitXY"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:src="@drawable/login_bottom"
        />
</LinearLayout>

