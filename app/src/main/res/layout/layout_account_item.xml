<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_gray"
   >
    <LinearLayout
        android:id="@+id/ll_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@mipmap/mine_selectaccount_apliay_bg"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_pay_cn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国工商银行"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/s16" />

                <TextView
                    android:id="@+id/tv_pay_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="222"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/s16" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/tv_pay_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/d120"
                    android:maxWidth="@dimen/d200"
                    android:paddingTop="5dp"
                    android:text="222"
                    android:textColor="@color/common_white" />

                <TextView
                    android:id="@+id/tv_pay_name"
                    android:minWidth="@dimen/d120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="222"
                    android:textColor="@color/common_white" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/d10"
            android:paddingLeft="20dp"
            android:layout_marginBottom="@dimen/d2"
            android:gravity="center_vertical"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@mipmap/mine_selectaccount_selected_icon"
                    android:padding="@dimen/d5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="30dp">
                <ImageView
                    android:id="@+id/iv_account_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@null"
                    android:src="@mipmap/mine_selectaccount_selected_icon"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/d7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bds_select"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bianji"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="30dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/iv_account_edit"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/d7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="25dp"
                >
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/mine_selectaccount_delete_icon"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bds_delete"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginRight="25dp"
                >

                <ToggleButton
                    android:id="@+id/btn_moren"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:maxLines="1"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    android:checked="false"
                    android:singleLine="true"
                    android:button="@drawable/mine_selectaccount_accept_switch"
                    android:textOn="@string/bds_for_acceptors"
                    android:textSize="@dimen/s12"
                    android:textOff="@string/bds_for_acceptors"
                    android:background="@null"
                   />
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
