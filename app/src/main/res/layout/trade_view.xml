<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_balance"
        style="@style/text_black_textsize13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Balance" />

    <EditText
        android:id="@+id/et_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_rechange_rect_gray"
        android:editable="false"
        android:gravity="center"
        android:hint="0.00000"
        android:padding="@dimen/d8"
        android:textSize="@dimen/s12" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/text_black_textsize13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:text="@string/bds_limit_order" />

    <com.tang.trade.tang.widget.EditTextDrawableClick
        android:id="@+id/etd_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_rechange_rect_gray"
        android:drawableLeft="@mipmap/rechange_sub"
        android:drawableRight="@mipmap/rechange_plus"
        android:gravity="center"
        android:hint="0.00000"
        android:inputType="numberDecimal"
        android:padding="@dimen/d8"
        android:paddingLeft="@dimen/d5"
        android:paddingRight="@dimen/d5"
        android:textSize="@dimen/s12" />

    <TextView
        android:id="@+id/tv_amount"
        style="@style/text_black_textsize13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:text="@string/Amount" />

    <com.tang.trade.tang.widget.EditTextDrawableClick
        android:id="@+id/etd_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_rechange_rect_gray"
        android:drawableLeft="@mipmap/rechange_sub"
        android:drawableRight="@mipmap/rechange_plus"
        android:gravity="center"
        android:hint="0.00000"
        android:inputType="numberDecimal"
        android:padding="@dimen/d8"
        android:paddingLeft="@dimen/d5"
        android:paddingRight="@dimen/d5"
        android:textSize="@dimen/s12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_25_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rechange_rect_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/d2"
            android:paddingTop="@dimen/d2"
            android:text="25%"
            android:textColor="@color/rechange_switch_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_50_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:layout_weight="1"
            android:background="@drawable/bg_rechange_rect_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/d2"
            android:paddingTop="@dimen/d2"
            android:text="50%"
            android:textColor="@color/rechange_switch_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_75_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:layout_weight="1"
            android:background="@drawable/bg_rechange_rect_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/d2"
            android:paddingTop="@dimen/d2"
            android:text="75%"
            android:textColor="@color/rechange_switch_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_100_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:layout_weight="1"
            android:background="@drawable/bg_rechange_rect_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/d2"
            android:paddingTop="@dimen/d2"
            android:text="100%"
            android:textColor="@color/rechange_switch_text"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        style="@style/text_black_textsize13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:text="@string/turn" />

    <EditText
        android:id="@+id/et_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_rechange_rect_gray"
        android:inputType="none"
        android:gravity="center"
        android:hint="0.00000"
        android:padding="@dimen/d8"
        android:textSize="@dimen/s12" />

    <TextView
        android:id="@+id/tv_fee"
        style="@style/text_black_textsize13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:text="@string/change" />

    <EditText
        android:id="@+id/et_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_rechange_rect_gray"
        android:inputType="none"
        android:gravity="center"
        android:hint="0.00000"
        android:padding="@dimen/d8"
        android:textSize="@dimen/s12" />

    <Button
        android:id="@+id/btn_buy"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d37"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_button_shape_radiues"
        android:gravity="center"
        android:text="@string/buy"
        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:textSize="@dimen/s14" />

    <Button
        android:id="@+id/btn_sell"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d37"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/bg_button_shape_radiues"
        android:gravity="center"
        android:text="@string/sell"
        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:visibility="gone" />

</LinearLayout>
