<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical"
    tools:context="com.tang.trade.tang.ui.CashInAddressByWAActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize"
            android:text="@string/bds_cash_in_address"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"
        />

    <TextView
        android:id="@+id/tv_niCheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:text="@string/full_name"
        android:textColor="@color/common_text_blank"
        android:textSize="@dimen/s13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/bg_line_shape_radiues"
        android:gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_weChat_alipay_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="20"
            android:textColor="@color/common_text_blank"
            android:textSize="@dimen/s13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10"
        android:text="@string/bds_apliay_account"
        android:textColor="@color/common_text_blank"
        android:textSize="@dimen/s13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/bg_line_shape_radiues"
        android:gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_weChat_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="40"
            style="@style/text_black_textsize13"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="@dimen/d150"
        android:layout_height="@dimen/d150"
        android:padding="@dimen/d8"
        android:layout_gravity="center"
        android:layout_margin="@dimen/d20"
        android:scaleType="fitCenter"
        android:src="@mipmap/common_saomiao_bg" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_button_shape_radiues"
        android:gravity="center"
        android:text="@string/bds_submit"
        android:textColor="@color/common_white"
        android:textSize="@dimen/s14" />

    <TextView
        android:id="@+id/tv_node"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d20"
        android:paddingRight="@dimen/d30"
        android:paddingLeft="@dimen/d30"
        android:text="@string/bds_cash_in_description"
        android:textColor="@color/common_edit_hint"
        android:textSize="@dimen/s13" />
</LinearLayout>