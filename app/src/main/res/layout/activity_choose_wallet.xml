<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    tools:context="com.tang.trade.tang.ui.loginactivity.ChooseWalletActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d140"
            android:gravity="center"
            android:text="@string/bds_sellect_wallet"
            android:textColor="@color/common_text_blue_v2"
            android:textSize="@dimen/s16" />
        <ImageView
            android:layout_marginLeft="@dimen/d22"
            android:layout_width="wrap_content"
            android:src="@mipmap/iv_borderless_icon"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/line_select_wallet"
            android:layout_marginTop="@dimen/d30"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginRight="@dimen/d12"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_wallet_icon" />
            <TextView
                android:id="@+id/tv_select_wallet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:text="@string/bds_sellect_wallet"
                android:textColor="@color/common_edit_hint"
                android:textSize="@dimen/s13" />
            <ImageView
                android:id="@+id/iv_account_spinner"
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_spinner" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="22dp"
            android:background="@color/common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginRight="@dimen/d12"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_pwd_icon" />
            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/bds_input_wallet_pwd"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/common_text_blank"
                android:textColorHint="@color/common_edit_hint"
                android:textSize="@dimen/s13" />
            <ImageView
                android:id="@+id/eye_password"
                android:padding="@dimen/d10"
                android:layout_width="wrap_content"
                android:textColorHint="@color/common_edit_hint"
                android:textSize="@dimen/s13"
                android:layout_height="wrap_content"
                android:src="@drawable/password" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="22dp"
            android:background="@color/common_line_gray" />
        <TextView
            android:id="@+id/tv_select_node"
            android:textSize="@dimen/s13"
            android:textColor="@color/common_text_blue_v2"
            android:text="@string/bds_sellect_node"
            android:layout_width="wrap_content"
            android:padding="@dimen/d10"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/d12"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_gravity="center"
            android:layout_width="230dp"
            android:layout_height="42.3dp"
            android:background="@drawable/bg_button_shape_radiues"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/bds_confirm"

            android:textColor="@color/common_white" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/d26"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_import_wallet"
                android:textSize="@dimen/s13"
                android:textColor="@color/common_text_blue_v2"
                android:text="@string/bds_import_wallet"
                android:layout_width="wrap_content"
                android:padding="@dimen/d10"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/d70"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_delete_wallet"
                android:textSize="@dimen/s13"
                android:textColor="#ff3b53"
                android:text="@string/bds_delete_wallet"
                android:layout_width="wrap_content"
                android:padding="@dimen/d10"
                android:layout_gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_gif1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:enabled="false"
            android:scaleType="fitXY"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:src="@drawable/login_bottom"
            />


    </LinearLayout>


</FrameLayout>
