<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/common_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@color/common_white"
        android:layout_marginBottom="@dimen/d10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/d8"
                android:id="@+id/tvVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                style="@style/text_black_textsize13"
                android:maxLines="1"
                android:singleLine="true"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/d3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bds_acceptant_id"
                    android:textColor="@color/accept_text_gray"
                    android:maxLines="1"
                    style="@style/text_black_textsize13"
                    android:singleLine="true"
                   />
                <TextView
                    android:id="@+id/tvAceptentId"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/accept_text_gray"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/s13"/>


            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/d3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/accept_text_gray"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/s13"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_marginRight="@dimen/d10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_gravity="right"
                android:textColor="@color/accept_text_gray"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/s12"/>

        </LinearLayout>




        </LinearLayout>
        <TextView
            android:id="@+id/tvButton"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/d3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/bds_recharge"
            android:gravity="center"
            android:minWidth="70dp"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:background="@null"
            android:textColor="@color/mine_trans_text_blue"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/s13"/>


    </RelativeLayout>




</LinearLayout>