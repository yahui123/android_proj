<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    tools:context="com.tang.trade.tang.ui.loginactivity.ImportWalletActivity">
    <RelativeLayout
    android:layout_width="match_parent"
    style="@style/my_actionbar_styles"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/d40"
        android:layout_height="@dimen/d40"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@mipmap/common_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/d20"
        android:text="@string/bds_import_file"
        style="@style/text_title_textsize"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line_gray"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="40dp"
            android:src="@mipmap/iv_fill_icon"
            android:scaleType="fitCenter"
            android:padding="@dimen/d10"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            style="@style/text_black_textsize13"
            android:text="@string/bds_fill_address"
            />
        <View
            android:background="@color/common_line_gray"
            android:layout_width="1dp"
            android:layout_height="26dp"/>
        <TextView
            android:id="@+id/tv_path"
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:text="@string/bds_sellect_path"
            android:textColor="@color/rechange_switch_text_selected"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line_gray"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="@string/password1"
            android:textColor="@color/common_color_blank"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/common_bg_gray"
            style="@style/text_black_textsize13"
            android:inputType="textPassword"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_blue_gradient_radius"
        android:padding="5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/bds_import"
        android:textColor="@color/common_white"
        android:gravity="center"
        android:layout_marginTop="90dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_gif1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:scaleType="fitXY"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:src="@drawable/login_bottom"
        />

</LinearLayout>
