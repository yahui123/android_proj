<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_gray"
    tools:context="com.tang.trade.tang.ui.AceeeptanceTiXianActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bds_Withdraw"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize"
           />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/common_bg_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/bds_currencies"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/CNY"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s13"

                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/common_bg_gray" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/extractable_amount"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/tv_keti_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s13"

                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/common_bg_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginTop="@dimen/d20"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/bds_tiqu_jie"
                    android:textColor="@color/common_text_blank"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/mine_text_gray"
                    android:textSize="@dimen/s12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginTop="@dimen/d8"
                android:background="@drawable/bg_line_shape_radiues"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_revalued_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/d10"
                    android:paddingLeft="@dimen/d10"
                    android:paddingTop="@dimen/d8"
                    android:singleLine="true"
                    android:textColor="@color/mine_text_gray"
                    android:textSize="@dimen/s16" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_marginTop="@dimen/d50"
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:layout_height="42.3dp"
                android:textSize="@dimen/s14"
                android:gravity="center"
                android:textColor="@color/common_white"
                android:text="@string/bds_submit"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_shape_radiues"/>
            <TextView
                android:id="@+id/tv_node"
                android:layout_marginTop="@dimen/d20"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1dp"
                android:textSize="@dimen/s11"
                android:textColor="@color/mine_text_red"
                android:text="@string/bds_note_tiqutixian"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
