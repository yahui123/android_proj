<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d8"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d8">

        <ImageView
            android:id="@+id/iv_currency"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/d5"
            android:paddingRight="@dimen/d5"
            android:src="@mipmap/broaderless" />

        <TextView
            android:id="@+id/tv_acceptantNama"
            style="@style/text_black_textsize15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/BDS" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_chongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/d10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/accept_cashin_icon" />

                <TextView
                    style="@style/text_black_textsize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"
                    android:paddingLeft="@dimen/d5"
                    android:text="@string/bds_deposit"

                    />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/common_bg_gray" />

            <LinearLayout
                android:id="@+id/btn_tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/d10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/accept_cashout_icon" />

                <TextView

                    style="@style/text_black_textsize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"
                    android:paddingLeft="@dimen/d5"
                    android:text="@string/bds_withdraw" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>