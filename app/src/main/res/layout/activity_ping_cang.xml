<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_gray"
    tools:context="com.tang.trade.tang.ui.PingCangActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bds_close_position"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize"
          />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"
        />

    <LinearLayout
        android:id="@+id/iv_select_cash_in_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@string/bds_select_currency_type"
            android:textColor="@color/common_text_blank"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/tv_cash_in_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/CNY"
            android:textColor="@color/common_text_blank"
            android:textSize="@dimen/s13" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/d8"
            android:src="@mipmap/drop_down_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d10"
        android:background="@color/common_bg_gray" />

    <ListView
        android:id="@+id/lv_pingcang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/common_white"
        android:listSelector="@color/common_none"
        android:scrollbars="none"></ListView>



</LinearLayout>
