<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginTop="10dp"
        android:background="@mipmap/iv_mortgage_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_mortgage_sumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/s18" />
                <TextView
                    android:layout_marginLeft="@dimen/d5"
                    android:id="@+id/tv_mortgage_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BDS"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/s18" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_mortgage_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/bds_amount_mortgage"
                android:textColor="@color/common_white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_quota_sumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/s18" />
                <TextView
                    android:layout_marginLeft="@dimen/d5"
                    android:id="@+id/tv_quota_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CNY"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/s18" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_quote_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/bds_credit_limit"
                android:textColor="@color/common_white" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
