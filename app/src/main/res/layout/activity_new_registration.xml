<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cashin_bg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="转入"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20"
            style="@style/text_black_textsize13"
            android:text="@string/user_name"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_wallet_address_generic_qr"
        android:layout_width="@dimen/d165"
        android:layout_height="@dimen/d165"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
         />
    <TextView
        android:paddingTop="@dimen/d10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bds_qr_transfer"
        style="@style/text_black_textsize14"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/tv_copy"
        android:layout_width="230dp"
        android:layout_height="42.3dp"
        android:layout_marginTop="@dimen/d30"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/d5"
        android:paddingTop="@dimen/d5"
        android:text="@string/copy"
        android:textSize="14sp"
        android:maxLines="1"
        android:textColor="@color/common_white"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_shape_radiues"
        />


</LinearLayout>