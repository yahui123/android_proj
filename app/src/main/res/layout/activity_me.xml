                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bds_exit" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/common_separator_v1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_anquan_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_qrcode_save"
            style="@style/text_black_textsize15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:drawableRight="@mipmap/common_enter_left"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:text="@string/link_plus_qrcode_save" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d0.5"
            android:background="@color/common_separator_v1" />

        <TextView
            android:id="@+id/tv_show_word"
            style="@style/text_black_textsize15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:drawableRight="@mipmap/common_enter_left"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:text="@string/look_title_400" />

        <View
