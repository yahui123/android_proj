                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/languages" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/common_separator_v1" />

        <LinearLayout
            android:id="@+id/tv_check_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/d12">

            <TextView
                android:id="@+id/textView5"
                style="@style/text_black_textsize15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bds_new_version" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/d10"
                android:textColor="@color/common_color_blank"
                android:textSize="@dimen/s12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/common_separator_v1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/common_separator_v1" />

        <LinearLayout
            android:id="@+id/ll_WeChat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/d12">

            <TextView
                style="@style/text_black_textsize15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bds_wechat_public_account" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/common_separator_v1" />

        <LinearLayout
            android:id="@+id/ll_download_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/d12">

            <TextView
                style="@style/text_black_textsize15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bds_download_address" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>

