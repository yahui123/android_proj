            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d0.5"
            android:background="@color/common_separator_v1" />

        <LinearLayout
            android:id="@+id/ll_pay_manage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/d12">

            <TextView
                style="@style/text_black_textsize15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bds_address_management" />

            <TextView
