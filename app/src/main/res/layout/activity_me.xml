            style="@style/text_black_textsize15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:drawableRight="@mipmap/common_enter_left"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:text="@string/link_password_title_400" />

        <LinearLayout
            android:id="@+id/ll_back_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/d12"
            android:visibility="gone">

            <TextView
                style="@style/text_black_textsize15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bds_backup" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:src="@mipmap/common_enter_left" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mykey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/d12"
            android:visibility="gone">

