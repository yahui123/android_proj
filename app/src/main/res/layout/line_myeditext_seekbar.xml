<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/line_fee"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d10"
        android:background="@drawable/bg_line_shape_radiues"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_fee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/mine_feemanage_text_red"
            android:textSize="@dimen/s16"
            android:maxLines="1"
            android:text="0.00"
            android:textColorHint="@color/mine_feemanage_text_red"
            android:background="@null"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/d10"
            android:paddingTop="@dimen/d8"
            android:paddingBottom="@dimen/d10"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_baifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:text="%"
            android:textColor="@color/mine_feemanage_text_red"
            android:textSize="@dimen/s14" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/d10"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/s13"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/common_text_blank"
            />
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="10"
            android:focusable="true"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:thumb="@mipmap/common_seekbar_icon"
            android:progressDrawable="@drawable/po_seekbar"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/s13"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/common_text_blank"
            />

    </LinearLayout>

</LinearLayout>