<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_gray"
    tools:context="com.tang.trade.tang.ui.PhoneAdministrationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/my_actionbar_styles"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bds_phone_manage"
            android:paddingTop="@dimen/d20"
            style="@style/text_title_textsize"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_separator_v2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/common_white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/bds_full_name"
            android:padding="@dimen/d10"
            style="@style/text_black_textsize13"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_enter_left"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:hint="请输入用户名"
            style="@style/mine_phone_edit_style"
            android:textCursorDrawable="@null"
           />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d15"
        android:background="@color/common_separator_v1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center_vertical"
        android:background="@color/common_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bds_id_member"
            android:maxLines="1"
            android:padding="@dimen/d10"
            android:singleLine="true"
            style="@style/text_black_textsize13"/>

        <EditText
            android:id="@+id/editIDCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:hint="身份证号"
            android:digits="0123456789xX"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:src="@mipmap/common_enter_left"
            android:gravity="right|center_vertical"
            style="@style/mine_phone_edit_style"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/common_separator_v1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/common_white"
     >
        <TextView
            android:padding="@dimen/d10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/bds_phone_number"
            style="@style/text_black_textsize13"
            android:maxLines="1"
            android:singleLine="true"
          />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="@dimen/d10"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:hint="请输入手机号"
            android:inputType="number"
            android:src="@mipmap/common_enter_left"
            style="@style/mine_phone_edit_style"

            android:textCursorDrawable="@null"
            />

        <Button
            android:id="@+id/btn_bianji"
            android:layout_width="45dp"
            android:layout_height="28dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:background="@drawable/bg_button_shape_radiues"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/bds_edit"
            android:textAllCaps="false"
            android:textColor="@color/common_white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/common_separator_v1"
        />
    <LinearLayout
        android:id="@+id/linearCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/common_white">
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bds_verification_code"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/text_black_textsize13" />

        <EditText
            android:id="@+id/editCode"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="验证码"
            android:inputType="number"
            android:maxLines="1"
            android:minWidth="80dp"
            android:singleLine="true"
            android:src="@mipmap/common_enter_left"
            android:text=""
            style="@style/mine_phone_edit_style"
            android:textCursorDrawable="@null"/>
        <View
            android:layout_width="@dimen/d1"
            android:layout_height="match_parent"
            android:background="@color/common_separator_v1"
            />
        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bds_send"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            style="@style/text_black_textsize13"
           />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/common_bg_gray"
        />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_summit"
            android:layout_width="match_parent"
            android:layout_height="42.3dp"
            android:textSize="@dimen/s14"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:text="@string/bds_sure"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:background="@color/mine_phone_text_blue"/>
    </RelativeLayout>



</LinearLayout>
